<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.youreye.bussro.feature.findstation.FindStationActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.findstation.FindStationActivity"
        android:background="@color/black">

        <!-- TTS 상징 이미지 -->
        <ImageView
            android:id="@+id/img_find_station"
            android:layout_width="265dp"
            android:layout_height="265dp"
            android:src="@drawable/ic_find_station"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- TTS & STT 인식 텍스트 -->
        <TextView
            android:id="@+id/txt_find_station"
            android:text="\'찾는 정류장을 말해주세요.\'"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="38dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>