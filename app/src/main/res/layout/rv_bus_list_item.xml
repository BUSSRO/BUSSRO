<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="busList"
            type="com.example.bussro.model.network.response.BusListData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#ECEBFF">

        <!-- 버스 번호 -->
        <TextView
            android:id="@+id/txt_bus_list_item_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="3317"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_bus_list_item_info"
            app:layout_constraintStart_toStartOf="parent"
            app:rtNm="@{busList.rtNm}"/>

        <!-- 남은 정류장 or 시간 -->
        <TextView
            android:id="@+id/txt_bus_list_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="전 정류장"
            android:textSize="25sp"
            android:textColor="#726D6D"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/txt_bus_list_item_number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:arrmsg1="@{busList.arrmsg1}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>