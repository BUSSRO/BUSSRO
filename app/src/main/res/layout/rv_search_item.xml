    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/black"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_search_item"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 버스정류장명-->
        <TextView
            android:id="@+id/txt_search_item_stationNm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            tools:text="왕십리역 2번출구앞"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/iv_search_item"
            app:layout_constraintStart_toEndOf="@id/iv_search_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_search_item_arsId"/>

        <!-- 정류장고유번호 및 방면 -->
        <TextView
            android:id="@+id/txt_search_item_arsId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="16dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt_search_item_stationNm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_search_item"
            app:layout_constraintBottom_toBottomOf="@id/iv_search_item"
            tools:layout_editor_absoluteX="16dp"
            tools:text="18911 / 성신여대입구역 방면" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>