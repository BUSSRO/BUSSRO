<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 바탕 -->
    <item
        android:height="@dimen/main_background_height">
        <shape android:shape="rectangle">

            <solid android:color="#FFE5E7" />

            <corners android:radius="@dimen/main_background_radius" />

            <padding
                android:right="20dp"/>
        </shape>
    </item>

    <!-- 포인트 컬러 -->
    <item
        android:width="@dimen/main_point_color_width"
        android:height="@dimen/main_background_height"
        android:gravity="left">

        <shape android:shape="rectangle">

            <solid android:color="#FD6E71" />

            <corners
                android:bottomLeftRadius="@dimen/main_background_radius"
                android:topLeftRadius="@dimen/main_background_radius" />
        </shape>
    </item>

    <!-- 책갈피 -->
    <item
        android:width="64dp"
        android:height="80dp"
        android:gravity="right|top">

        <layer-list>
            <!-- 포인트 컬러 -->
            <item>
                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="#FD6E71"/>

                    <corners
                        android:bottomLeftRadius="8dp"
                        android:bottomRightRadius="8dp"/>

                </shape>
            </item>

            <!-- 배경(원) -->
            <item
                android:width="46dp"
                android:height="46dp"
                android:gravity="center">

                <shape
                    android:shape="oval">

                    <solid
                        android:color="#FFCC00"/>

                </shape>
            </item>

            <!-- 아이콘 -->
            <item
                android:width="29dp"
                android:height="29dp"
                android:drawable="@drawable/ic_main_second"
                android:gravity="center">
            </item>

        </layer-list>
    </item>

</layer-list>
